<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} {{ title }} {% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('Content/bootstrap-4.0.0-dist/css/bootstrap.min.css') }}">
        {% endblock %}
    </head>
    <body>
        <header>
            <div>
                <h1>{{ title }}</h1>
            </div>
            <div>
                Пользователь: {% block user %} {{ authUser }} {% endblock %}
                <button>Выйти</button>
            </div>
        </header>
        <div>
            <hr/>
            {% block body %}

                <div class="container-fluid">
                    <div class="row no-gutters">
                        <div class="col-12 col-lg-6 col-md-6">
                            <h1 class="display-4">
                                Добро пожаловать!
                            </h1>
                        </div>

                    </div>
                </div>

            {% endblock %}
            <hr/>
        </div>
        <footer>
            {{ footerMessage }}
        </footer>



        {% block javascripts %}
            <!-- Optional JavaScript -->
            <!-- jQuery first, then Popper.js, then Bootstrap JS -->
            <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
                    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
                    crossorigin="anonymous"></script>
{#            <script src="{{ asset('assets/framework/vue/vue.js') }}"></script>#}
            <script src="{{ asset('Content/bootstrap-4.0.0-dist/js/bootstrap.min.js') }}"></script>
            {% block addJs %}{% endblock %}
        {% endblock %}
    </body>
</html>
